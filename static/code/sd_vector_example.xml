<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:targetApi="16">

    <item android:id="@+id/state_on"
        android:drawable="@drawable/example_vector_active"
        android:state_checked="true" />
    <item android:id="@+id/state_off"
        android:drawable="@drawable/example_vector_inactive" />

    <transition
        android:drawable="@drawable/example_animated_vector_start"
        android:fromId="@id/state_off"
        android:toId="@id/state_on" />

    <transition
        android:drawable="@drawable/example_animated_vector_end"
        android:fromId="@id/state_on"
        android:toId="@id/state_off" />

</animated-selector>
